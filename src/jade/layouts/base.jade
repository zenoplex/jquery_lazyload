doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title #{data.title}
    link(type='text/css' rel='stylesheet' href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(type='text/css' rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(type='text/css' rel='stylesheet' href='//almsaeedstudio.com/themes/AdminLTE/dist/css/AdminLTE.min.css')
    link(type='text/css' rel='stylesheet' href='//almsaeedstudio.com/themes/AdminLTE/dist/css/skins/_all-skins.min.css')
    link(type='text/css' rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.min.css')
    block style
    link(rel='shortcut icon' href='//www.appelsiini.net/img/favicon.ico')
    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  body.skin-black.sidebar-mini
    .wrapper
      header.main-header

        //logo
        a.logo(href='/')
          span.logo-mini
            b lzy
          span.logo-lg
            b lazy
            | load

        nav.navbar.navbar-static-top
          a.sidebar-toggle(href='#' data-toggle='offcanvas')
            span.sr-only Toggle navigation

          .navbar-custom-menu
            ul.nav.navbar-nav
              li.user.user-menu
                a(href='//github.com/zenoplex' target='_blank')
                  img.user-image(src='//0.gravatar.com/avatar/e8a77785f5ca3025221437f53027763d')
                  span.hidden-xs zenoplex

      // sidebar
      include ../partials/sidebar

      // content
      .content-wrapper
        block content

      footer.main-footer
        | HTML Template by
        strong
          a(href='#') AdminLTE


    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
    script(src='//almsaeedstudio.com/themes/AdminLTE/dist/js/app.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/prettify/r298/run_prettify.min.js')

    script(src='./jquery.lazyload.min.js')
    block script
