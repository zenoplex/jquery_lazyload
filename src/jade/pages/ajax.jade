extends ../layouts/base

block content
  section.content-header
    h1 #{data.title}
      - if (data.subtitle)
        small #{data.subtitle}

  section.content
    .row
      .col-xs-12
        .box
          .box-header.with-border
            h3.box-title getting started
            .box-tools.pull-right
              button.btn.btn-box-tool(data-widget='collapse')
                i.fa.fa-minus

          .box-body
            p
              | Images are loaded via AJAX(H) call after you click the container.
              | Lazy Load is applied in the callback.

            pre.prettyprint
              | $('#container').one('click', function() {
              |   $('#container').load('images.html', function(response, status, xhr) {
              |     $('img.lazy').lazyload();
              |   });
              | });
            pre.prettyprint &lt;img class="lazy" data-original="img/example.jpg" width="765" height="574"&gt;</pre>

            // image list
            include ../partials/image-list

          .box-footer

block script
  script.
    (function($){

      $('img.lazy').lazyload({ threshold: -200 });
    })(window.jQuery)